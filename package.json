{
  "name": "MCP-files",
  "version": "1.0.0",
  "description": "A production-ready Model Context Protocol (MCP) server providing secure filesystem access for AI assistants",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "filesystem",
    "ai",
    "claude",
    "lm-studio",
    "llm",
    "assistant",
    "tools",
    "anthropic"
  ],
  "author": {
    "name": "Kevin Brown",
    "email": "kevin@example.com",
    "url": "https://github.com/kevinbrown"
  },
  "license": "MIT",
  "homepage": "https://github.com/kevin-biot/MCP-files#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-biot/MCP-files.git"
  },
  "bugs": {
    "url": "https://github.com/kevin-biot/MCP-files/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "MCP-files": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "examples/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/*.js && chmod +x scripts/*.sh",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "./scripts/start-http.sh",
    "start:stdio": "./scripts/start-stdio.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting not configured yet'",
    "format": "echo 'Formatting not configured yet'",
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "install:scripts": "chmod +x scripts/*.sh"
  },
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.8",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "chromadb": "^3.0.10",
    "diff": "^5.1.0",
    "express": "^4.18.0",
    "glob": "^10.3.10",
    "minimatch": "^10.0.1",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/diff": "^5.0.9",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.14",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
